<% if flash[:error] %>
	<div class="alert alert-error">
		<%= flash[:error] %>
		<button type="button" class="close" data-dismiss="alert">&times;</button>
	</div>
<% end %>
<% if flash[:notice] %>
	<div class="alert alert-info">
		<%= flash[:notice] %>
		<button type="button" class="close" data-dismiss="alert">&times;</button>
	</div>
<% end %>
<% if flash[:success] %>
	<div class="alert alert-success">
		<%= flash[:success] %>
		<button type="button" class="close" data-dismiss="alert">&times;</button>
	</div>
<% end %>
