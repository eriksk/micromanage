		<%= render :partial => "/layouts/notices", :locals => { flash: flash } %>
	</div>

	<div class="container">
		<%= yield %>
	</div>

	<div class="container">
		<%= render :partial => "/layouts/footer" %>
	</div>

</body>
</html>
