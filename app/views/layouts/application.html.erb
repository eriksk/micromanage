<!DOCTYPE html>
<html>
<head>
  <title>Micromanage</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div class="container">
		<%= render :partial => "/layouts/header" %>
	</div>
	
